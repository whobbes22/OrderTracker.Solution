@{
  Layout = "_Layout";
}

@using OrderTracker.Models;

<h3>Here are all the items in this Vendor:</h3>


<ol>
@foreach (Order order in @Model["order"])
{
   <li><a href='/vendor/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li> 
   <ul>
    <li>@order.Description</li>
   </ul>
}
</ol>

<p><a href='/vendor/@Model["vendor"].Id/orders/new'>Add a new order</a></p> 
<p><a href='/vendor'>Return to vendor list</a></p> 
<p><a href='/'>Return to Main Page</a></p>