@{
  Layout = "_Layout";
}

@using OrderTracker.Models
  <h1>Current Vendors</h1>

 @if (@Model.Count == 0)
{
  <h4>Please add a new Vendor</h4>
} 

@foreach (Vendor vend in Model)
{
  <h4><a href="/vendors/@vend.Id">@vend.Name</a></h4>
}
  <p><a href='/'>Click here to go back</a></p>
  <p><a href='/Vendor/new'>or here to add a vendor</a></p>

